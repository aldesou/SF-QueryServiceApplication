<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest ApplicationTypeName="QueryServiceApplicationType" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <Parameters>
        <Parameter Name="QueryService_Port" DefaultValue="80" />
    </Parameters>

    <ServiceManifestImport>
        <ServiceManifestRef ServiceManifestName="QueryService" ServiceManifestVersion="1.0.0" />
            <ResourceOverrides>
                <Endpoints>
                    <Endpoint Name="ServiceEndpoint" Protocol="tcp" Port="[QueryService_Port]" />
                </Endpoints>
            </ResourceOverrides>
    </ServiceManifestImport>

    <ServiceTemplates>
        <StatelessService ServiceTypeName="QueryServiceType" InstanceCount="-1">
            <SingletonPartition/>
        </StatelessService>
     </ServiceTemplates>

    <Diagnostics>
        <CrashDumpSource IsEnabled="true">
            <Destinations>
                <LocalStore IsEnabled="true" RelativeFolderPath="CrashDumps" />
            </Destinations>
        </CrashDumpSource>
    </Diagnostics>

</ApplicationManifest>